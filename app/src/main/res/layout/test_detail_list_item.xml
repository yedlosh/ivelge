<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical">
        <TextView
            android:id="@+id/participant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Participant1"
            android:tag="participantName" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/finished_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_detail_list_item_finished"
                android:tag="finishedLabel"
                />
            <TextView
                android:id="@+id/finished_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="12:38 15.4.2014"
                android:tag="finishedDate"
                />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/duration_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_detail_list_item_duration"
                android:tag="durationLabel" />
            <TextView
                android:id="@+id/duration_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="0:25"
                android:tag="durationTime" />
            <TextView
                android:id="@+id/logs_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_detail_list_item_logs"
                android:layout_marginLeft="20dp"
                android:tag="logsLabel"/>
            <TextView
                android:id="@+id/logs_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="5"
                android:tag="logsValue"/>
        </LinearLayout>

        <TextView
        android:id="@+id/notStarted_text"
        android:tag="notStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Started"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        />

</LinearLayout>