<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/final_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/final_time"
        />
    <TextView
        android:id="@+id/final_time_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/final_time"
        android:text="00:26:21"
        />

    <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/final_time"
            />
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/holo_blue_light"
        android:dividerHeight="1dp"
        android:layout_alignTop="@+id/viewpager_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="105dp" />

</RelativeLayout>
