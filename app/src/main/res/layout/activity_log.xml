<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cz.ctu.pda.ivelge.LogActivity">

    <TextView
        android:text="@string/log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/map_text"
        android:text="@string/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"/>
    <TextView
        android:id="@+id/final_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/map_text"
        android:text="@string/final_time"
        />
    <TextView
        android:id="@+id/final_time_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/map_text"
        android:layout_toRightOf="@id/final_time"
        android:text="00:26:21"
        />

    <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/final_time"
            />

</RelativeLayout>
