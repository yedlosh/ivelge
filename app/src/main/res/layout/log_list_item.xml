<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/log_item_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0:25"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/log_item_priority_label"
            />
        <TextView
            android:id="@+id/log_item_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | "
            />
        <TextView
            android:id="@+id/log_item_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task 1"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/category"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/log_item_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Category"
            android:textAppearance="?android:textAppearanceMedium"/>
        <TextView
            android:id="@+id/log_item_subcategory1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Category"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--
        <Button
            android:id="@+id/show_on_map_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_on_map_btn"
            android:onClick="showOnMap"/>
        <Button
            android:id="@+id/comments_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comments_btn"
            android:onClick="showComments"
            android:layout_gravity="right"
            />
        -->
    </LinearLayout>
</LinearLayout>